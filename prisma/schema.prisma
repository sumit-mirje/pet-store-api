generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PetType {
  DOG
  CAT
  BIRD
  OTHER
}

model Pet {
  id        Int      @id @default(autoincrement())
  name      String
  type      PetType
  age       Int
  breed     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())


  @@index([type])
  @@index([name])
}
